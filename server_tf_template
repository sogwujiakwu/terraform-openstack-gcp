variable "zone" {
  default = "__ZONE_PLACEHOLDER__"
}

resource "google_compute_instance" "vm_instance" {
  name         = "terraform-instance"
  machine_type = "n1-standard-4"
  zone         = var.zone
  tags         = ["web", "dev"]
  boot_disk {
    initialize_params {
      image = "nested-vm-image"
    }
  }

  network_interface {
    network = google_compute_network.openstack_vpc_network.name
    access_config {
    }
  }
}

